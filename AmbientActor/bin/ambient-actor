#!/usr/bin/ruby

require "optparse"
require "ambient_actor"

options = {:host => "localhost", :port => 9123}
OptionParser.new do |opts|
  opts.banner = "Usage: AmbienConnector.rb -h localhost -p 8081"

	opts.on("-h", "--host HOST", "address to brain", String) do |h|
    options[:host] = h
  end

  opts.on("-p", "--port PORT", "port to brain", Integer) do |p|
    options[:port] = p
  end
end.parse!

AmbientActor::start(options)
